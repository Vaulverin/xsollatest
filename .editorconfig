# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8
trim_trailing_whitespace = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.bat]
indent_style = tab

[*.sh]
indent_style = tab

[00-header]
indent_style = tab

[.bash_aliases]
indent_style = tab

[*.zep]
indent_style = tab

[*.rb]
indent_size = 2

[Vagrantfile]
indent_size = 2
